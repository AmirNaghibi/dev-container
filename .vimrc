syntax on			" basic syntax
set number			" line number
set ruler			" row and col specifier at bottom right
set showmatch			" show matching brackets
set mouse=a			" enable mouse usage in all modes
"set laststatus=2		" show status bar
set autoindent			" autoindent
set smartindent			" indent based on file syntax
set cursorline			" line under currentline
set tabstop=8 softtabstop=0 expandtab shiftwidth=4 smarttab
colorscheme torte		" set colorscheme
set statusline+=%F              " show full file path
